<?xml version="1.0" encoding="UTF-8"?>
<OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
                      xmlns:moz="http://www.mozilla.org/2006/browser/search/">
    <ShortName>Search with AI</ShortName>
    <Description>AI-powered search engine with intelligent results</Description>
    <InputEncoding>UTF-8</InputEncoding>
    <Image width="16" height="16" type="image/x-icon">/favicon.ico</Image>

    <!-- The main search URL -->
    <Url type="text/html"
         method="get"
         template="/search">
         <Param name="q" value="{searchTerms}"/>
    </Url>

    <!-- For browser autocomplete -->
    <Url type="application/x-suggestions+json"
         method="get"
         template="/api/suggestions">
         <Param name="q" value="{searchTerms}"/>
    </Url>

    <!-- For OpenSearch description discovery -->
    <Url type="application/opensearchdescription+xml"
         rel="self"
         template="/opensearch.xml"/>

    <!-- Additional metadata -->
    <moz:SearchForm>/search</moz:SearchForm>
    <Language>*</Language>
    <OutputEncoding>UTF-8</OutputEncoding>
    <AdultContent>false</AdultContent>
</OpenSearchDescription>
